@model ProductModel

@{
    ViewData["Title"] = "Product";
}

<form asp-controller="product" asp-area="Admin" asp-action="Edit" metod="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add product</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="All"></div>*@
        <div class="row">
        <div calss="col-12 mt-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control mt-3" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="3" class="form-control mt-3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control mt-3" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control mt-3" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control mt-3" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control mt-3" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-control mt-3" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div calss="col-12 mt-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control mt-3" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>


        <div class="col-12 mt-3">

            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            <a asp-controller="Product" asp-area="Admin" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }